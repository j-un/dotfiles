autoload -Uz compinit bashcompinit select-word-style
compinit
bashcompinit
select-word-style bash

bindkey -e
bindkey ƒ emacs-forward-word    # Option + f
bindkey ∫ emacs-backward-word   # Option + b

setopt correct
setopt share_history
setopt hist_ignore_dups

alias vi="vim"
alias view="vim -R"
alias ls="ls --color=auto"
alias ll="exa -lr --icons"
alias lll="exa -lrT --icons"
alias h="history -i"
alias grep='grep --color=auto'
alias diff='diff --color=auto'
alias ip='ip -color=auto'
alias rm='rm -i'
alias gfc="git fetch && git checkout"
alias bb="brew bundle --no-lock --file=~/.config/Brewfile"

export HISTFILE=${ZDOTDIR:-$HOME}/.zhistory
export HISTSIZE=2000
export SAVEHIST=10000
export EDITOR=vim

if [ -d "/opt/homebrew/opt/coreutils/libexec/gnubin" ]; then
  export PATH=/opt/homebrew/opt/coreutils/libexec/gnubin:${PATH}
fi

eval "$(sheldon source)"
