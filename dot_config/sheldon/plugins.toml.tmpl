# `sheldon` configuration file
# ----------------------------
#
# You can modify this file directly or you can use one of the following
# `sheldon` commands which are provided to assist in editing the config file:
#
# - `sheldon add` to add a new plugin to the config file
# - `sheldon edit` to open up the config file in the default editor
# - `sheldon remove` to remove a plugin from the config file
#
# See the documentation for more https://github.com/rossmacarthur/sheldon#readme

shell = "zsh"

[plugins]
[plugins.zsh-defer]
github = "romkatv/zsh-defer"

[plugins.zsh-256color]
github = "chrissicool/zsh-256color"

[plugins.zsh-completions]
github = "zsh-users/zsh-completions"

[plugins.starship]
inline = 'eval "$(starship init zsh)"'

# TODO: deferしたい(inlineだとapply書けない)
[plugins.anyenv]
inline = 'eval "$(anyenv init -)"'

[plugins.tmux-minimum]
local = "~/.local/share/zsh-plugins/tmux-minimum"

[plugins.zsh-syntax-highlighting]
github = "zsh-users/zsh-syntax-highlighting"
apply = ["defer"]

[plugins.zsh-autosuggestions]
github = "zsh-users/zsh-autosuggestions"
apply = ["defer"]

[plugins.fzf-key-bindings]
{{ if eq .chezmoi.os "darwin" }}
local = "/opt/homebrew/var/homebrew/linked/fzf/shell"
{{ else if eq .chezmoi.os "linux" }}
local = "/usr/share/fzf"
{{ end }}
use = ["key-bindings.zsh"]
apply = ["defer"]

[plugins.enhancd]
github = "b4b4r07/enhancd"
apply = ["defer"]
hooks.pre = "export ENHANCD_ENABLE_HOME=false"

[plugins.zsh-you-should-use]
github = "MichaelAquilina/zsh-you-should-use"
apply = ["defer"]
hooks.pre = "export YSU_MODE=ALL"

[templates]
defer = "{{ `{{ hooks | get: \"pre\" | nl }}{% for file in files %}zsh-defer source \"{{ file }}\"\n{% endfor %}{{ hooks | get: \"post\" | nl }}` }}"
